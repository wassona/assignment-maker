<h4 class="mdl-color-text--primary">Create a new course:</h4>
<%= form_for @course, :html => { :multipart => true } do |f| %>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label field" >
		<%= f.text_field :name, class: "mdl-textfield__input", tabindex: "1"%>
		<%= f.label :name, class: "mdl-textfield__label" %>
	</div>

	  

	<%= f.submit "Create", class: "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary", tabindex: "3" %>

<% end %>