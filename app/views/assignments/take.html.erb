<script>
	let labelData = JSON.parse(<%= raw @assignment.label_data.to_json %>);
</script>


<%= form_tag enter_answers_path do %>
	<div class="mdl-color--blue-grey-100 content-width">
	<h3 class="center fit-content padding-1"><%= @assignment.name %></h3>
	<div id="image-wrapper" >
		<div id="auto-label-wrapper">
			<div id="new-div-wrapper"></div>
			<div id="active-assignment-divider-wrapper">
				<% 1000.times do |i| %>
					<div id="d<%= i %>" class="active-assignment-divider"></div>
				<% end %>
			</div>
			<img id="assignment-image" src="<%= @assignment.image.url(:regular) %>">
		</div>
	</div>
	<div class="padding-1 center fit-content">
		<%= submit_tag "Submit!", id: "result-submit-button", class: "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary" %>
	</div>
	</div>
<% end %>
<div style="height: 200px"></div>