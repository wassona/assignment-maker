<div class="mdl-color--deep-purple-100 small-tool-container">
	<h3>Forgot your password?</h3>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label field">
	    <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
	    <%= f.label :email, class: "mdl-textfield__label" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
