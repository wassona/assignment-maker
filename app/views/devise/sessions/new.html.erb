<div class="mdl-color--deep-purple-100 small-tool-container">

  <h3>Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label field">
      <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
      <%= f.label :email, class: "mdl-textfield__label" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label field">
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
      <%= f.label :password, class: "mdl-textfield__label" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <label for="user_remember_me" class="mdl-checkbox mdl-js-checkbox fit-content mdl-color-text--primary">
          <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
          <span class="mdl-checkbox__label">Remember Me</span>
        </label>

      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--primary"
       %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
